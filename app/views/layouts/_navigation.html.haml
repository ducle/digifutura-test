%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Evaluation', root_url, class: "navbar-brand large-brand"
    .collapse.navbar-collapse
      - if current_user
        %ul.nav.navbar-nav
          %li{class: current_path?(/questionnaire/)}= link_to "Questionnaires", questionnaires_path
          %li{class: current_path?(/quizzes/)}= link_to "Quizzes", quizzes_path
          %li{class: current_path?(/files/)}= link_to "Files", nodes_path
          %li{class: current_path?(/sharings/)}= link_to "Shared", sharings_path
          %li{class: current_path?(/labels/)}= link_to "Labels", labels_path
        %ul.nav.navbar-nav.navbar-right.pull-right
          %li
            %a(type="button" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
              %i.fa.fa-user
              = current_user.name
              %span.caret
            %ul.dropdown-menu
              %li
                %a Setting
                %a{href: destroy_user_session_path, title: 'Sign out'}
