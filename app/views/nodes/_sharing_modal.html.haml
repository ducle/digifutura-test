= form_for file_node, url: share_node_path(file_node), method: :post do |f|
  .modal-header
    %button(type="button" class="close" data-dismiss="modal" aria-label="Close")
      %span(aria-hidden="true")
        &times;
    %h4.modal-title
      %i.fa.fa-share-alt
      Share
      %strong.color-blue= file_node.name
      with
  .modal-body
    %p
      .form-group
        = text_field_tag "file_node[user_ids][]", nil, class: 'form-control', id: 'tokenfield', placeholder: 'Enter name...'
    %div

  .modal-footer
    %button(type="button" class="btn btn-default" data-dismiss="modal")
      Close
    %button(type="button" class="btn btn-primary" type="submit")
      Save changes
